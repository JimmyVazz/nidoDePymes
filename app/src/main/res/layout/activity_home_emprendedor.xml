<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeEmprendedor"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/logotext"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Quieres emprender y no sabes como?"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Asesorate con nosotros!"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Conoce y aplica el modelo canvas"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/canvas"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="¿Buscas inversionistas?"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/buscar"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="¿Cuentas con el capital suficiente?"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/capital"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Impuestos de acorde a tu giro"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/grafica"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="¿Qué es un plan de negocios?"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/plan"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Creditos bancarios pra tu negocio"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/credito"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Riesgos que corres"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/riesgo"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="¿Tienes dudas?"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/duda"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Crea tu plan de negocios"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/negocio"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>