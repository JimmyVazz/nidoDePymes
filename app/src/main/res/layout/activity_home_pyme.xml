<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePyme"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/logotext"
                android:layout_margin="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Da el siguiente paso!"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="15dp"
                android:textColor="@color/colorPrimaryDark"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/bot"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Habla con nuestro chatbot"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="15dp"
                    android:drawableLeft="@drawable/bot"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Conoce los beneficios de hsbc"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="15dp"
                    android:drawableLeft="@drawable/banco"
                    android:textColor="@color/colorPrimaryDark"/>


                <Button
                    android:id="@+id/cuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Obten tu apertura de cuenta"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="15dp"
                    android:drawableLeft="@drawable/credito"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Se lider de tu negocio"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="15dp"
                    android:drawableLeft="@drawable/capital"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="¿Tienes dudas?"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_reg"
                    android:layout_margin="15dp"
                    android:drawableLeft="@drawable/duda"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>